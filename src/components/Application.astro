            img="https://images.unsplash.com/photo-1606185540834-d6e7483ee1a4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
            title="造船"
            body=""
            application={[
                "廢物和廢水的處理和處置",
                "泵送艙底水",
                "搬運泥漿、液體泥漿",
                "泵送鹽水",
                "分離油/水",
                "加載和卸載化學品和原材料",
            ]}
            client:load
