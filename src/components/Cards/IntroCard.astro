---
export interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div class="flex flex-col justify-start p-2 sm:p-6 my-2 lg:m-0 rounded-md border border-gray-300/50 bg-slate-100 hover:scale-[1.01] hover:shadow-sm transition duration-200">
    <h1 class="text-xl sm:text-2xl font-medium border-b-[1px] pb-4 mb-4">{title}</h1>    
    <p class="text-base sm:text-lg">{body}</p>
</div>